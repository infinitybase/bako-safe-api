{
  "name": "gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config ./src/index.ts",
    "build": "tsc --project . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "start": "pm2-runtime start ./build/index.js",
    "build:lib": "yarn codegen:fuel && yarn codegen:app",
    "codegen:app": "gql-gen -r dotenv/config --config codegen.ts",
    "codegen:fuel": "gql-gen -r dotenv/config --config codegen.fuel.ts",
    "copyFiles": "copyfiles -u 1 src/**/*.graphql ./build",
    "postbuild": "yarn run copyFiles",
    "prepare": "yarn build:lib",
    "run": "make -C ./ deploy env_file=.env"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-sse/server": "^0.0.13",
    "@graphql-tools/delegate": "^10.0.11",
    "@graphql-tools/schema": "^10.0.4",
    "@graphql-tools/utils": "^10.2.2",
    "@graphql-tools/wrap": "^10.0.5",
    "bakosafe": "0.0.61",    
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.17.1",
    "fuels": "0.88.1",
    "graphql": "^16.9.0",
    "graphql-http": "^1.22.1",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-sse": "^2.5.3",
    "pg": "^8.12.0",
    "pm2": "5.3.0",
    "tai64": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5",
    "copyfiles": "2.4.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.11",
    "@types/node": "20.6.0",
    "@types/pg": "^8.11.6",
    "graphql-import-node": "^0.0.5",
    "ts-gql-plugin": "^1.5.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "0.0.9"
  }
}
